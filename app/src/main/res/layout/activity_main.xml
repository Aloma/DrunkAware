<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context="com.example.aloma.project_2.MainActivity">


    <TextView
        android:text="FAMILY CONTACTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/family_contacts"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:text="PERSONAL DATA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:id="@+id/textView5"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:text="EMERGENCY CONTACTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:layout_below="@+id/emergency_contacts"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryDark"/>

    <ImageButton
        android:src="@drawable/personal_data"
        android:scaleType="fitCenter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="5dp"
        android:id="@+id/personal_data"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:id="@+id/family_contacts"
        android:src="@drawable/family_contacts"
        android:padding="5dp"
        android:layout_marginTop="29dp"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <ImageButton
        android:src="@drawable/app_lock"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/lock_applications"
        android:background="@android:color/transparent"
        android:layout_above="@+id/textView"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:src="@drawable/trigger_words"
        android:id="@+id/trigger_words"
        android:background="@android:color/transparent"
        android:layout_above="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/emergency_contact"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:id="@+id/emergency_contacts"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/family_contacts"
        android:layout_alignStart="@+id/family_contacts" />

    <TextView
        android:text="TRIGGER WORDS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignRight="@+id/lock_applications"
        android:layout_alignEnd="@+id/lock_applications" />

    <TextView
        android:text="LOCK APPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/trigger_words"
        android:layout_alignStart="@+id/trigger_words"
        android:layout_alignRight="@+id/lock_applications"
        android:layout_alignEnd="@+id/lock_applications" />


</RelativeLayout>
